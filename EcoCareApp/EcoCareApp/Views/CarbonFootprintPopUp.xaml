<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcoCareApp.Views.CarbonFootprintPopUp"
        xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup" xmlns:viewmodels="clr-namespace:EcoCareApp.ViewModels">
    <StackLayout>
        <Grid HeightRequest="350">
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="200"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
        </Grid>
        <Label Text="{Binding CarbonFootPrint, StringFormat='your carbon footprint is {0:F0} CO2'}"

        VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        <Image Source="footprint_popup.png" />
        <Button Text="Close" Command="{Binding PopUpClosed}" Grid.Row="1"/>

    </StackLayout>
</pages:PopupPage>
