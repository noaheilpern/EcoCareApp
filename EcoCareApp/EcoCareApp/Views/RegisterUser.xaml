<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcoCareApp.Views.RegisterUser">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="un" Text="{Binding UserName}" Placeholder="Choose a user name"/>
            <Entry x:Name="pass" Text="{Binding Password}" IsPassword="True" Placeholder="Password"/>
            <Entry x:Name="mail" Text="{Binding Email}" Placeholder="Email"/>
          
            <Entry x:Name="country" Text="{Binding Country}" Placeholder="Country"/>
            <Entry x:Name="city" Text="{Binding City}" Placeholder="City"/>
            <Entry x:Name="address" Text="{Binding Street}" Placeholder="Adress"/>


            <Label Text="{Binding Label}"></Label>
            <Button Text="Sign Up" Command="{Binding Register}"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>