    <ContentPage.Content>
        <xtools:TabView x:Name="mainTabs" TabStripPlacement="Bottom" IsSwipeEnabled="False" TabStripHeight="70" VerticalOptions="FillAndExpand">
            <xtools:TabViewItem Icon="images/user_bw.png" IconSelected="images/user.png">
                <!--<local:UserProfile>
                   
                </local:UserProfile>-->
            </xtools:TabViewItem>


            <xtools:TabViewItem Icon="images/home_bw.png" IconSelected="images/home.png" VerticalOptions="FillAndExpand">
                <xtools:TabViewItem.Content>
                    <Grid BackgroundColor="White">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="3*"/>
                            <RowDefinition Height="0.5"/>
                            <RowDefinition Height="2*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0"  x:Name="firstRow">


                            <radialMenu:SfRadialMenu x:Name="radialMenu" AnimationDuration="1000"  SelectionColor="White" 
                             CenterButtonFontSize="15" EnableCenterButtonAnimation="True" CenterButtonPlacement="Center" 
                                             RimRadius="150" 
                              RimColor="#b5e48c" SeparatorThickness="5" 
                              SeparatorColor="Black" >
                                <radialMenu:SfRadialMenu.CenterButtonView >
                                    <Grid>
                                        <StackLayout BackgroundColor="Transparent" VerticalOptions="Center">
                                            <Image Source="static_plus.png"/>
                                        </StackLayout>
                                    </Grid>
                                </radialMenu:SfRadialMenu.CenterButtonView>
                                <radialMenu:SfRadialMenu.CenterButtonBackView>
                                    <Grid>
                                        <StackLayout BackgroundColor="Transparent" VerticalOptions="Center">
                                            <Image Source="static_plus.png"/>
                                        </StackLayout>
                                    </Grid>
                                </radialMenu:SfRadialMenu.CenterButtonBackView>

                                <radialMenu:SfRadialMenu.Items>
                                    <radialMenu:SfRadialMenuItem Image="distance.png"/>
                                    <radialMenu:SfRadialMenuItem Image="electricity.png"/>
                                    <radialMenu:SfRadialMenuItem Image="meat.png"/>
                                </radialMenu:SfRadialMenu.Items>
                            </radialMenu:SfRadialMenu>

                        </Grid>

                        <Grid Grid.Row="1" Padding="10,0,10,0" IsVisible="{Binding Visible}">
                            <BoxView BackgroundColor="#e5e0e0" />
                        </Grid>
                        <Grid Grid.Row="2" Padding="10,10,10,10" IsVisible="{Binding Visible}">
                            <Grid.RowDefinitions>
                                <RowDefinition x:Name="logRow" Height="30" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <Label Text="Event Logs:" x:Name="eventLogsLabel" FontSize="16" YAlign="Center" HorizontalOptions="Start" FontAttributes="Bold" />
                            <ContentView Grid.Row="1" Padding="3,1,1,3">
                                <ContentView VerticalOptions="Fill">
                                    <ScrollView x:Name="scrollView" IsClippedToBounds="true">
                                        <StackLayout x:Name="eventLogLayout" Margin="5" />
                                    </ScrollView>
                                </ContentView>
                            </ContentView>
                        </Grid>
                    </Grid>
