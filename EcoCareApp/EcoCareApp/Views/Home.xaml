                                        </Grid.ColumnDefinitions>
                                        <Label Text="Enable Dragging" />
                                        <Switch Grid.Column="1" x:Name="dragSwitch" IsToggled="true" />
                                        <Label Text="Enable Rotation" Grid.Row="1" Grid.Column="0" />
                                        <Switch Grid.Column="1" Grid.Row="1" x:Name="rotationSwitch" IsToggled="true" />
                                    </Grid>
                                </StackLayout>
                            </ScrollView>
                        </StackLayout>
                    </l.PropertyView>-->

                </xtools:TabViewItem.Content>
            </xtools:TabViewItem>
            




            <xtools:TabViewItem Icon="images/shopping_cart_bw.png" IconSelected="images/shopping_cart.png">
                <xtools:TabViewItem.Content>
                    <StackLayout>
                        <Label Text="SHOP SHOP SHOP"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
                    </StackLayout>
                </xtools:TabViewItem.Content>
            </xtools:TabViewItem>



            <xtools:TabViewItem Icon="images/chart_bw.png" IconSelected="images/chart.png">
                <xtools:TabViewItem.Content>
                    <StackLayout>
                        <Label Text="CHARTS!!!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
                    </StackLayout>
                </xtools:TabViewItem.Content>
            </xtools:TabViewItem>


        </xtools:TabView>
    </ContentPage.Content>
</ContentPage>