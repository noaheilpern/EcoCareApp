<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcoCareApp.Views.LogIn">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Please enter your email:"></Label>
            <Entry x:Name="mail" Text="{Binding Email}"/>

            <Label Text="Please enter your password:"/>
            <Entry x:Name="pass" Text="{Binding Password}" IsPassword="True"/>
            <Label Text="{Binding Label}"></Label>

            <Button Text="Log In" Command="{Binding LogIn}"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>